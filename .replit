modules = ["python-3.11", "nodejs-22"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "1. Whoop Summary"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "2. Weekly Health Analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "3. Friday Date Suggester"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "4. Fetch Daily Whoop"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "5. Fetch Daily Oura"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "6. Combine Health Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "7. Pyrus AI Daily Summary"

[[workflows.workflow]]
name = "1. Whoop Summary"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/get_whoop_summary.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "2. Weekly Health Analysis"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/weekly_health_analyzer.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "3. Friday Date Suggester"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/friday_date_suggester.py --force"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "4. Fetch Daily Whoop"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/fetch_daily_whoop.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "5. Fetch Daily Oura"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/fetch_daily_oura.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "6. Combine Health Data"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/health_combiner.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "7. Pyrus AI Daily Summary"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/pyrus_ai_coach.py --daily-summary"

[workflows.workflow.metadata]
outputType = "console"
